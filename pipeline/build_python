pipeline {
    agent any

    stages {
        stage('Git Checkout') {
            steps {
                script {
                    git branch: 'test_python',
                        credentialsId: 'rajath-my-git-pat',
                        url: 'https://github.com/rajath-optit/flask-hello-world-devops-project.git'
                    echo "Checked out Git repository"
                }
            }
        }

        stage('Build') {
            steps {
                echo 'Building Docker image...'
                sh 'sudo docker build -t raorajath/flask-hello-world:pythonlatest .'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing...'
                sh 'sudo docker stop flask-hello-world || true'
                sh 'sudo docker rm flask-hello-world || true'
                sh 'sudo docker run --name flask-hello-world raorajath/flask-hello-world:pythonlatest /bin/bash -c "pytest test.py && flake8"'
            }
        }

        stage('Docker Login and Push') {
            steps {
                echo 'Logging in to Docker registry...'

                // Use expect to handle the password prompt
                sh '''
                    expect -c '
                    spawn sudo -u optit docker login -u $DOCKER_USERNAME --password-stdin
                    expect "Password:" { send "D@rkfl@m3\r" }
                    interact
                    '
                '''
                
                sh 'sudo docker push raorajath/flask-hello-world:pythonlatest'
            }
        }

        stage('Docker Run') {
            steps {
                script {
                    echo 'Running Docker container...'
                    sh "sudo docker run -p 8080:80 -d raorajath/flask-hello-world:pythonlatest"
                }
            }
        }

        stage('Final Cleanup') {
            steps {
                echo 'Final cleanup...'
                sh 'sudo docker system prune -af --volumes'
            }
        }

        stage('Docker Publish') {
            steps {
                script {
                    echo 'Publishing Docker image...'
                    sh "sudo docker push raorajath/flask-hello-world:pythonlatest"
                }
            }
        }

        stage('Docker Pull') {
            steps {
                script {
                    echo 'Pulling Docker image...'
                    sh "sudo docker pull raorajath/flask-hello-world:pythonlatest"
                }
            }
        }
    }
}

